<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AstroNode</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css" />
    <link rel="stylesheet" href="~/Web.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/homepage.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/details.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 px-5">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img class="navbar-logo" src="~/img/astronodelogo.png" alt="Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">AstroNode</a>
                        </li>
                        <li class="nav-item">
                            <div class="search-form">
                                <i class="fa fa-search"></i>
                                <input type="text" class="form-control search-form-input" placeholder="Search anything...">
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="#">About Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        <div class="container mb-0">
            <div class="row mt-2">
                <div class="col-md-3">
                    <div class="footer-link-header">
                        About Us
                    </div>
                    <div class="d-flex flex-column footer-links">
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-solid fa-user-astronaut"></i>
                            <div>Who are we?</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-solid fa-coins"></i>
                            <div>Stake with us</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-github"></i>
                            <div>Our GitHub</div>
                        </a>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="footer-link-header">
                        Social Medias
                    </div>
                    <div class="footer-social-media-container footer-links">
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-telegram"></i>
                            <div>Telegram</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-twitter"></i>
                            <div>Twitter</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-discord"></i>
                            <div>Discord</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-medium"></i>
                            <div>Medium</div>
                        </a>
                        <a class="d-flex align-items-center" href="#">
                            <i class="fa-brands fa-linkedin"></i>
                            <div>LinkedIn</div>
                        </a>
                    </div>
                </div>
            </div>
            <span class="float-end footer-copyright-text">&copy; 2022 - AstroNode</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
